<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PresenterApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="Chào mừng đến với Trình quản lý Sách" />

            <Button
                x:Name="ManageButton"
                Clicked="OnManageClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Điều hướng đến trang quản lý"
                Text="Thêm/ Sửa Sách và Thể loại" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>