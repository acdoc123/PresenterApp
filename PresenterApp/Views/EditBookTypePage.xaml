<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PresenterApp.Views.EditBookTypePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:PresenterApp.Models"
    xmlns:vm="clr-namespace:PresenterApp.ViewModels"
    Title="{Binding Title}"
    x:DataType="vm:EditBookTypeViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label FontAttributes="Bold" Text="Tên Loại Sách" />
            <Entry Placeholder="Nhập tên loại sách..." Text="{Binding CurrentBookType.Name}" />

            <Button
                Command="{Binding SaveBookTypeCommand}"
                HorizontalOptions="Fill"
                Text="Lưu Loại Sách" />
            <Button
                BackgroundColor="Red"
                Command="{Binding DeleteBookTypeCommand}"
                HorizontalOptions="Fill"
                IsVisible="{Binding CurrentBookType.Id, Converter={StaticResource IntToBoolConverter}}"
                Text="Xóa Loại Sách" />

            <Label
                Margin="0,20,0,0"
                FontAttributes="Bold"
                FontSize="Medium"
                Text="Thuộc tính chung" />

            <Grid ColumnDefinitions="*,*,Auto" ColumnSpacing="5">
                <Entry
                    Grid.Column="0"
                    Placeholder="Tên thuộc tính"
                    Text="{Binding NewAttributeName}" />
                <Picker
                    Title="Kiểu dữ liệu"
                    Grid.Column="1"
                    ItemsSource="{Binding FieldTypes}"
                    SelectedItem="{Binding NewAttributeType}" />
                <Button
                    Grid.Column="2"
                    Command="{Binding AddAttributeCommand}"
                    Text="Thêm" />
            </Grid>

            <CollectionView
                Margin="0,10,0,0"
                ItemsSource="{Binding CommonAttributes}"
                SelectionMode="None">
                <CollectionView.Header>
                    <Label FontAttributes="Italic" Text="Các thuộc tính đã thêm:" />
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:AttributeDefinition">
                        <Grid Padding="0,5" ColumnDefinitions="*,*,Auto">
                            <Label
                                Grid.Column="0"
                                Text="{Binding Name}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="1"
                                Text="{Binding Type}"
                                VerticalOptions="Center" />
                            <Button
                                Grid.Column="2"
                                BackgroundColor="Transparent"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:EditBookTypeViewModel}}, Path=DeleteAttributeCommand}"
                                CommandParameter="{Binding}"
                                Text="Xóa"
                                TextColor="Red" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>