<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PresenterApp.Views.ContentSearchPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PresenterApp.Views.Controls"
    xmlns:vm="clr-namespace:PresenterApp.ViewModels"
    Title="Tìm kiếm Nội dung"
    x:DataType="vm:ContentSearchSharedViewModel">

    <Grid RowDefinitions="Auto,*">
        <Label
            Grid.Row="0"
            Padding="10,10,10,0"
            FontAttributes="Bold"
            FontSize="Title"
            Text="{Binding Title}" />

        <controls:ContentSearchSharedView Grid.Row="1" />
    </Grid>

</ContentPage>